<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/colorBlack"
    android:padding="20dp">

    <TextView
        android:id="@+id/textViewDialogCategoryLabel"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:gravity="end"
        android:background="@color/colorBlack"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:text="@string/category"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextDialogCategory"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextDialogCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_underline_green"
        android:textSize="16sp"
        android:textColor="@color/colorRed"
        android:maxLength="16"
        android:imeOptions="actionDone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewDialogCategoryLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewDialogAmountLabel"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="12dp"
        android:gravity="end"
        android:background="@color/colorBlack"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:text="@string/amount"
        app:layout_constraintTop_toBottomOf="@+id/textViewDialogCategoryLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextDialogAmount"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextDialogAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_underline_green"
        android:textSize="16sp"
        android:textColor="@color/colorRed"
        android:maxLength="16"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/editTextDialogCategory"
        app:layout_constraintStart_toEndOf="@+id/textViewDialogAmountLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
